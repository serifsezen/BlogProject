@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Hakımızda Düzenleme Sayfası</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    @using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post))
                    {
                <div class="card-body">
                    @foreach (var item in Model)
                    {

                        <div class="form-group">
                            <label for="inputName">ID</label>
                            <input type="text" name="AboutId" class="form-control" value="@item.AboutId">
                        </div>
                        <div class="form-group">
                            <label for="inputName">Görsel 1</label>
                            <input type="text" name="AboutImage1" class="form-control" value="@item.AboutImage1">
                        </div>
                        <div class="form-group">
                            <label for="inputName">Görsel 2</label>
                            <input type="text" name="AboutImage2" class="form-control" value="@item.AboutImage2">
                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Açıklama</label>
                            <textarea class="form-control" rows="4" name="AboutContent1">@item.AboutContent1</textarea>
                        </div>

                        <div class="form-group">
                            <label for="inputDescription">Açıklama 2 </label>
                            <textarea class="form-control" name="AboutContent2" rows="4">@item.AboutContent2</textarea>
                        </div>

                        <div class="form-group">
                            <label for="inputName">kısa bilgi görseli</label>
                            <input type="text" name="AboutContentShortImage" class="form-control" value="@item.AboutContentShortImage">
                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Kısa Bilgi</label>
                            <textarea class="form-control" name="AboutContentShort" rows="4">@item.AboutContentShort</textarea>
                        </div>
                    }
                    <button class="btn btn-success">Güncelle</button>
                </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>
</html>

